{% extends 'base.html.twig' %}

{% block title %}Calendrier Annuel
	{{ year }}
{% endblock %}

{% block body %}

	<div class="page-content">
		{% include 'partials/mignature/breadcrumb.html.twig' %}
		<div class="content-block">
			<div class="section-full bg-white content-inner" style="background-image:url(images/line2.png); background-size:contain;background-repeat: no-repeat;background-position: center;">
				<div class="container">
					<div class="row">
						<div class="col-lg-12 col-md-12 col-sm-12 m-b15">
							<h1>Calendrier
								{{ year }}</h1>
							<div class="row">

								{% for month in calendar %}
									<div class="col-4" style="border: 1px solid #ccc; padding: 0 5px; {% if month.month == currentMonth and month.year == year %}background-color: #eef;{% endif %}">
										<h2>{{ month.name }}
											{{ month.year }}</h2>
										<table>
											<thead>
												<tr>
													{% for day in weekDays %}
														<th>{{ day }}</th>
													{% endfor %}
												</tr>
											</thead>
											<tbody>
												{% for week in month.days %}
													<tr>
														{% for day in week %}
															<td>{{ day ?? '' }}</td>
														{% endfor %}
													</tr>
												{% endfor %}
											</tbody>
										</table>
									</div>
								{% endfor %}
							</div>

						</div>


					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

